<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.miracle.base.view.TitleBar
                    android:id="@+id/titleBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:TitleBar_LeftText="@string/icon_side_menu"
                    app:TitleBar_Title="我的" />


                <LinearLayout
                    android:id="@+id/llMe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="6dp"
                    android:background="@color/white"
                    >


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true">

                            <TextView
                                android:id="@+id/ibShare"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@mipmap/bianji_iocn"
                                android:drawablePadding="6dp"
                                android:textColor="@color/main_text_color"
                                android:padding="10dp"
                                android:textSize="16sp"
                                android:text="分享" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true">

                            <TextView
                                android:id="@+id/ibSettings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@mipmap/bianji_set"
                                android:drawablePadding="6dp"
                                android:textColor="@color/main_text_color"
                                android:padding="10dp"
                                android:textSize="16sp"
                                android:text="设置" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:background="@drawable/right_label"
                            android:layout_marginTop="85dp"
                            android:paddingLeft="5dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@mipmap/bianji_iocn_right"
                                android:drawablePadding="6dp"
                                android:textColor="@color/white"
                                android:padding="6dp"
                                android:textSize="13sp"
                                android:text="编辑" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingTop="50dp"
                                android:paddingLeft="6dp"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <com.miracle.base.view.CircleImageView
                                    android:id="@+id/ivHeadImg"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_centerInParent="true"
                                    android:layout_marginTop="10dp"
                                    android:adjustViewBounds="false"
                                    android:src="@mipmap/default_head" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="10dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvName"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:gravity="center"
                                        android:textColor="@color/main_text_color"
                                        android:text="请登录"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:id="@+id/userName"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:gravity="center"
                                        android:textColor="@color/m666666"
                                        android:textSize="13sp"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp"
                                        android:layout_marginTop="6dp"
                                        android:visibility="visible" />
                                </LinearLayout>



                            </LinearLayout>


                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    >

                    <LinearLayout
                        android:id="@+id/ibmyPost"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/jiemian001_07"
                            android:visibility="visible"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:textColor="@color/main_text_color"
                            android:text="我的发帖"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#f5f5f5"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        />

                    <LinearLayout
                        android:id="@+id/ibmyCircle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/jiemian001_05"
                            android:visibility="visible"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="我的社区"
                            android:textColor="@color/main_text_color"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#f5f5f5"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        />


                    <LinearLayout
                        android:id="@+id/ibBailManage"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/jiemian001_03"
                            android:visibility="visible"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="我的收藏"
                            android:textColor="@color/main_text_color"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <!--<com.miracle.base.view.zradiogroup.ZRadioButton
                        android:id="@+id/ibBailManage"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        app:ZRadioButton_IconTextSize="22sp"
                        app:ZRadioButton_Text="我的收藏"
                        app:ZRadioButton_Icon="@string/icon_my_collections"
                        />-->


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/jiemian001_16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="分享"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

                <com.miracle.base.view.ItemBar
                    android:id="@+id/ibCustomerService"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    app:ItemBar_TextSize="16sp"
                    android:layout_marginTop="6dp"
                    app:ItemBar_Left_TextColor="@color/zradiobutton_unchecked"
                    app:ItemBar_Left_Icon="@string/icon_customer_service"
                    app:ItemBar_Left_TextSize="24sp"
                    app:ItemBar_Text="联系客服" />

                <com.miracle.base.view.ItemBar
                    android:id="@+id/ibAboutUs"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    app:ItemBar_TextSize="16sp"
                    android:layout_marginTop="1dp"
                    app:ItemBar_Left_TextColor="@color/zradiobutton_unchecked"
                    app:ItemBar_Left_Icon="@string/icon_about_us"
                    app:ItemBar_Left_TextSize="24sp"
                    app:ItemBar_Text="关于我们" />

                <com.miracle.base.view.ItemBar
                    android:id="@+id/appUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    app:ItemBar_TextSize="16sp"
                    android:layout_marginTop="1dp"
                    app:ItemBar_Left_TextColor="@color/zradiobutton_unchecked"
                    app:ItemBar_Left_Icon="@string/icon_update_bb"
                    app:ItemBar_Left_TextSize="24sp"
                    app:ItemBar_Text="更新版本" />

                <com.miracle.base.view.ItemBar
                    android:id="@+id/ibClearCache"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    app:ItemBar_TextSize="16sp"
                    android:layout_marginTop="1dp"
                    app:ItemBar_Left_TextColor="@color/zradiobutton_unchecked"
                    app:ItemBar_Left_Icon="@string/icon_clean"
                    app:ItemBar_Left_TextSize="24sp"
                    app:ItemBar_Text="清除缓存" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="invisible">

                        <com.miracle.base.view.zradiogroup.ZRadioButton
                            android:id="@+id/ibOrderManage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            app:ZRadioButton_Icon="@string/icon_order_manage"
                            app:ZRadioButton_IconTextSize="22sp"
                            app:ZRadioButton_Text="赛事分析"
                            app:ZRadioButton_TextSize="12sp">
                        </com.miracle.base.view.zradiogroup.ZRadioButton>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="invisible">

                        <com.miracle.base.view.IconFontTextView
                            android:id="@+id/ibGroupChat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:ZRadioButton_Icon="@string/icon_chatroom"
                            app:ZRadioButton_IconTextSize="22sp"
                            app:ZRadioButton_Text="聊天室"
                            app:ZRadioButton_TextSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="invisible">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/jiemian001_17" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_settings"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="invisible">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/jiemian001_18" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_about_us"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>
</layout>